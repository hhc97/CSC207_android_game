<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/n_2_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/nbg"
        android:clickable="true"
        android:orientation="horizontal">

    <ImageView
            android:id="@+id/vegetation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/forestd" />

    <ImageView
            android:id="@+id/vegetation2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/forestd" />

    <ImageView
        android:id="@+id/tut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:srcCompat="@drawable/t6" />

    <ImageView
        android:id="@+id/tut1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:srcCompat="@drawable/tut1" />

    <ImageView
        android:id="@+id/tut2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/tut2"
        tools:visibility="invisible" />

    <Button
            android:id="@+id/left"
            android:layout_width="56dp"
            android:layout_height="42dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="51dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/lbut" />

    <Button
            android:id="@+id/right"
            android:layout_width="56dp"
            android:layout_height="42dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="113dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/rbut"
            android:onClick="moveRight" />

    <Button
            android:id="@+id/jump"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="580dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/jbut"
            android:onClick="tapScreen" />

    <Button
            android:id="@+id/attack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="667dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/hbut" />

    <ImageView
        android:id="@+id/rock1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="181dp"
        android:layout_marginTop="232dp"
        app:srcCompat="@drawable/rock2" />

    <ImageView
        android:id="@+id/rock1_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/rock1"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="181dp"
        android:layout_marginTop="232dp"
        android:layout_marginEnd="0dp"
        app:srcCompat="@drawable/rock2" />

    <ImageView
        android:id="@+id/tree"
        android:layout_width="wrap_content"
        android:layout_height="63dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="430dp"
        android:layout_marginTop="206dp"
        app:srcCompat="@drawable/tree_2" />

    <ImageView
        android:id="@+id/tree1_c"
        android:layout_width="wrap_content"
        android:layout_height="63dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="430dp"
        android:layout_marginTop="206dp"
        app:srcCompat="@drawable/tree_2" />

    <ImageView
        android:id="@+id/tree2"
        android:layout_width="93dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="607dp"
        android:layout_marginTop="201dp"
        app:srcCompat="@drawable/tree" />

    <ImageView
        android:id="@+id/tree2_c"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignEnd="@+id/tree2"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="607dp"
        android:layout_marginTop="201dp"
        android:layout_marginEnd="0dp"
        app:srcCompat="@drawable/tree" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/c"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="278dp"
        android:layout_marginTop="240dp"
        android:src="@drawable/coin"
        android:visibility="invisible" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/c2"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="697dp"
        android:layout_marginTop="237dp"
        android:src="@drawable/coin"
        android:visibility="invisible" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/c1"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="594dp"
        android:layout_marginTop="238dp"
        android:src="@drawable/coin"
        android:visibility="invisible" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/potion"
        android:layout_width="30dp"
        android:layout_height="31dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="404dp"
        android:layout_marginTop="235dp"
        android:src="@drawable/potion"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/grass1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="23dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/hills_layer_5" />

    <ImageView
        android:id="@+id/grass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="23dp"
        android:scaleType="fitXY"
        android:src="@drawable/hills_layer_5" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/hero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="68dp"
        android:layout_marginTop="155dp"
        android:src="@drawable/run1" />

    <TextView
            android:id="@+id/score"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:ems="10"
            android:text="Score"
            android:textColor="#F8F7F7"
            android:textSize="16sp" />

    <TextView
            android:id="@+id/health"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Health"
            android:textColor="#F8F7F7"
            android:textSize="16sp" />

    <TextView
        android:id="@+id/potions"
        android:layout_width="98dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="61dp"
        android:text="Potions"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />

    <Button
            android:id="@+id/menu"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="133dp"
            android:layout_marginEnd="240dp"
            android:background="@drawable/main"
            android:onClick="returnMenu"
            android:textColor="#FFFFFF"
            android:visibility="invisible" />

    <TextView
        android:id="@+id/endtext1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="305dp"
        android:layout_marginBottom="243dp"
        android:text="Go back to main menu"
        android:textColor="#FFFFFF"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/endtext"
        android:layout_width="117dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="330dp"
        android:layout_marginBottom="289dp"
        android:text="You Died !"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:visibility="invisible" />

    <Button
            android:id="@+id/potionbutton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="240dp"
            android:layout_marginBottom="267dp"
            android:background="@drawable/potion1"
            android:onClick="resumeLevel"
            android:textColor="#FFFFFF"
            android:visibility="invisible" />

    <TextView
        android:id="@+id/endtext2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="285dp"
        android:layout_marginBottom="271dp"
        android:text="Use a health potion to revive"
        android:textColor="#FFFFFF"
        android:visibility="invisible" />

    <TextView
            android:id="@+id/endInstructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="104dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="Good job! Now collect your loot and proceed."
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:visibility="invisible" />

</RelativeLayout>